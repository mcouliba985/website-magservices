---
import Layout from '../layouts/main/Layout.astro';
import SEO from '../components/astro/SEO.astro';
import Banner from '../components/astro/banner.astro';
import ServiceSlide from '../components/react/service-slide';

import { Fragment } from 'react';

const home = {
      title: 'Le rôle du jeune musulman',
      description: 'Découvrez le rôle et l’impact de la jeunesse dans l’Islam.',
};

const pageUrl = Astro.site + Astro.url.pathname;
---

<SEO title={home.title} description={home.description} url={pageUrl} type="website" />

<Layout>
      <div>
            <Banner />
      </div>

      <div class="mb-4">
            <section class="container mx-auto px-4 sm:px-6 lg:px-8">
                  <div class="py-12 lg:py-1">
                        <h2
                              class="text-[#FF7700] mb-8 font-bold text-2xl sm:text-3xl md:text-4xl text-center lg:text-left"
                        >
                              Qui sommes-nous
                        </h2>

                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
                              <!-- Image avec description alternative -->
                              <div class="about-img">
                                    <img
                                          class="w-full h-auto"
                                          src="/img/man.png"
                                          alt="Expert de Mag Services Mali travaillant sur un projet digital"
                                          loading="lazy"
                                    />
                              </div>

                              <!-- Contenu texte -->
                              <div class="about-content">
                                    <h1
                                          class="text-[#274BA1] text-2xl sm:text-3xl md:text-4xl font-bold mb-4"
                                    >
                                          Développez votre activité avec notre agence
                                    </h1>

                                    <h2 class="text-lg sm:text-xl font-medium mb-4">
                                          Pourquoi choisir <span class="font-bold text-[#274BA1]"
                                                >MAG SERVICES MALI</span
                                          > comme partenaire digital de confiance ?
                                    </h2>

                                    <p class="text-base sm:text-lg leading-relaxed text-gray-700">
                                          Nous sommes une équipe d’experts passionnés par
                                          l’innovation digitale. Grâce à notre expertise en
                                          développement web, applications mobiles, SEO et marketing
                                          digital, nous concevons des solutions sur mesure adaptées
                                          à vos besoins.
                                          <br class="hidden md:block" />
                                          Notre engagement : vous offrir des services de qualité, une
                                          approche personnalisée et des résultats concrets pour la croissance
                                          de votre entreprise.
                                    </p>
                              </div>
                        </div>
                  </div>
            </section>
      </div>

      <div class="service-banner">
            <div class="container mx-auto p-8">
                  <h2
                        class="text-[#FF7700] mb-4 font-bold text-2xl sm:text-3xl md:text-4xl text-center lg:text-left"
                  >
                        Services
                  </h2>

                  <p class="w-full lg:w-1/2 text-center text-[#274BA1] lg:text-4xl lg:leading-10">
                        Nous sommes flexibles pour vous offrir le meilleur
                  </p>
            </div>
      </div>
      <section class="container mx-auto px-4">
            <ServiceSlide client:load />
      </section>
</Layout>
