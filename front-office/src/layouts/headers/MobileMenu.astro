---
import NavLink from '../../components/astro/NavLink.astro';
---

<div
      id="mobile-menu"
      x-show="open"
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 -translate-y-4"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 -translate-y-4"
      class="md:hidden space-y-4 bg-white text-[#0049b1] px-4 py-6 rounded-lg shadow-lg font-medium"
>
      <NavLink href="/" class="block hover:text-primary transition">Home</NavLink>
      <NavLink href="/about-us" class="block hover:text-primary transition">À propos</NavLink>
      <a href="/services" class="block hover:text-primary transition">Services</a>
      <a href="/realisations" class="block hover:text-primary transition">Réalisations</a>
      <a href="/blog" class="block hover:text-primary transition">Blog</a>
      <a href="/contact" class="block hover:text-primary transition">Contact</a>
      <a
            href="https://wa.me/22374954352"
            target="_blank"
            rel="noopener noreferrer"
            class="nav-menu-btn mt-4 block text-center bg-primary text-white px-4 py-2 rounded-lg shadow hover:bg-primary-dark transition h-12"
      >
            <i class="fab fa-whatsapp"></i> WhatsApp
      </a>
</div>
