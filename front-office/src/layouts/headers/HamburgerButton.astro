---
// Props : open (boolean), toggle (function)
const { open, toggle } = Astro.props;
---

<button
      onclick={toggle}
      aria-label="Toggle menu"
      aria-expanded={open}
      class="md:hidden text-white focus:outline-none focus:ring-2 focus:ring-white transition"
>
      {
            open ? (
                  <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-8 w-8"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                  >
                        <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M6 18L18 6M6 6l12 12"
                        />
                  </svg>
            ) : (
                  <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-8 w-8"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                  >
                        <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16"
                        />
                  </svg>
            )
      }
</button>
