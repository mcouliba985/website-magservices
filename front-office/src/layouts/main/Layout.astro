---
import Header from '../headers/Header.astro';
import Footer from '../footers/footer-component.astro';
import ContactForm from '../../components/react/ContactForm';

import '../../styles/global.css';

const pageTitle = 'MAG SERVICES MALI – Création de sites web, apps et solutions SaaS sur mesure';
const pageDescription =
      'Agence tech à Bamako. Sites web performants, apps mobiles, solutions digitales sur mesure, SEO stratégique.';
const imageURL = 'https://magservices-mali.org/icon/MAG-SERVICES-MALI-2.webp'; // Mets ici l'URL publique de ton logo
---

<!doctype html>
<html lang="en">
      <head>
            <meta charset="UTF-8" />
            <meta name="viewport" content="width=device-width" />
            <meta
                  property="og:image"
                  content="https://magservices-mali.org/icon/MAG-SERVICES-MALI-2.webp"
            />
            <meta
                  name="twitter:image"
                  content="https://magservices-mali.org/icon/MAG-SERVICES-MALI-2.webp"
            />

            <title>{pageTitle}</title>
            <meta name="description" content={pageDescription} />
            <meta name="robots" content="index, follow" />

            <!-- Open Graph / Facebook -->
            <meta property="og:type" content="website" />
            <meta property="og:title" content={pageTitle} />
            <meta property="og:description" content={pageDescription} />
            <meta property="og:image" content={imageURL} />
            <meta property="og:url" content="https://magservices-mali.org/" />

            <!-- Twitter -->
            <meta name="twitter:card" content="summary_large_image" />
            <meta name="twitter:title" content={pageTitle} />
            <meta name="twitter:description" content={pageDescription} />
            <meta name="twitter:image" content={imageURL} />

            <link rel="icon" type="image/png" href="/favicon.png" sizes="64x64" />
            <link rel="alternate" hreflang="fr" href="https://magservices-mali.org/" />
            <meta name="generator" content={Astro.generator} />
            <link rel="preconnect" href="https://fonts.googleapis.com" />
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
            <link
                  href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
                  rel="stylesheet"
            />
            <link rel="preconnect" href="https://fonts.googleapis.com" />
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
            <link
                  href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Livvic:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,900&family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
                  rel="stylesheet"
            />
            <link rel="preload" as="image" href="/img/banner-img.webp" type="image/webp" />

            <!-- Font Awesome -->
            <link
                  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
                  rel="stylesheet"
            />
            <!-- Google Fonts -->
            <link
                  href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
                  rel="stylesheet"
            />

            <title>MAG SERVICES MALI</title>

            <!-- Google tag (gtag.js) -->
            <script async src="https://www.googletagmanager.com/gtag/js?id=G-Q862LQTJL2"></script>
            <script>
                  // @ts-ignore
                  window.dataLayer = window.dataLayer || [];
                  function gtag() {
                        // @ts-ignore
                        dataLayer.push(arguments);
                  }
                  // @ts-ignore
                  gtag('js', new Date());
                  // @ts-ignore
                  gtag('config', 'G-Q862LQTJL2');
            </script>
      </head>
      <body>
            <Header />
            <main class="min-h-[600px]">
                  <slot />

                  <div>
                        <div class="container mx-auto px-4 pb-4 relative">
                              <h2
                                    class="text-[#FF7700] mb-4 font-bold text-2xl sm:text-3xl md:text-4xl text-center lg:text-left"
                              >
                                    Contactez-Nous
                              </h2>
                              <p class="w-full lg:w-1/2 text-center lg:text-start text-[#274BA1]">
                                    Un projet en tête, une question ? Contactez-nous dès maintenant,
                                    notre équipe est à votre écoute pour vous accompagner.
                              </p>
                        </div>
                        <ContactForm />
                  </div>
            </main>
            <Footer />
      </body>
</html>

<style>
      html,
      body {
            margin: 0;
            width: 100%;
            height: 100%;
      }
</style>
